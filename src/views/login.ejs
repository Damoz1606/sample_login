<%- include('partials/header')%>

    <div class="img-bg">
        <div class="overlay">
            <div class="wrapper">
                <div class="form-section">
                    <h3>Log in</h3>
                    <% if(message.length> 0) { %>
                        <div class="alert alert-danger">
                            <%= message %>
                        </div>
                        <% } %>
                            <form action="/login" method="post" class="signin-form">
                                <div class="form-group form-input">
                                    <input type="email" name="email" id="email" placeholder="Email" required autofocus>
                                </div>
                                <div class="form-group form-input">
                                    <input type="password" name="password" id="password" placeholder="Password"
                                        required>
                                </div>
                                <!-- <a href="/log" class="btn btn-primary mt-4">LOG IN</a> -->
                                <button type="submit" class="btn btn-primary mt-4">LOG IN</button>
                            </form>
                            <hr>
                            <p class="new-signup">You don't have an account yet? <a href="/signup"
                                    class="new-signup-link">Sign
                                    up</a>
                            </p>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer')%>