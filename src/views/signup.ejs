<%- include('partials/header')%>

    <div class="img-bg">
        <div class="overlay">
            <div class="wrapper">
                <div class="form-section">
                    <h3>Sign up</h3>
                    <% if(message.length> 0) { %>
                        <div class="alert alert-danger">
                            <%= message %>
                        </div>
                        <% } %>
                            <form action="/signup" method="post" class="signin-form">
                                <div class="form-group form-input">
                                    <input type="email" name="email" id="email" placeholder="Email" required autofocus>
                                </div>
                                <div class="form-group form-input">
                                    <input type="password" name="password" id="password" placeholder="Password"
                                        required>
                                </div>
                                <button type="submit" class="btn btn-primary mt-4">Sign Up</button>
                            </form>
                            <hr>
                            <p class="new-login">You have an account? <a href="/" class="new-login-link">Log in</a>
                            </p>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer')%>