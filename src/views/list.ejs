<%- include('partials/header')%>
    <%- include('partials/nav')%>

        <div class="container container-fluid mt-5">
            <div class="row">
                <div class="col-sm mr-1 ml-1">
                    <div class="form-section d-flex justify-content-center">
                        <form action="/index/add_item" method="post">
                            <div class="form-group form-input">
                                <input type="text" name="description" placeholder="Description" required autofocus>
                            </div>
                            <div class="form-group form-input">
                                <input type="hidden" name="id_user" value="<%= user._id %>">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg mr-1 ml-1">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.list.forEach( item=> { %>
                                <tr>
                                    <td>
                                        <%= item.description %>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <form action="/index/delete_item" method="post">
                                                <input type="hidden" name="id_user" value="<%= user._id %>">
                                                <input type="hidden" name="id_item" value="<%= item._id %>">
                                                <button type="submit" class="btn btn-danger"><span
                                                        class="fa fa-trash"></span></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include('partials/footer')%>